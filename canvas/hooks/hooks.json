{
  "description": "Automatically spawn plan viewer when Claude writes to plan files",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "bun ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/spawn-plan-viewer.ts",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
