{
  "description": "Canvas plugin hooks - auto-install deps and spawn plan viewer",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python ${CLAUDE_PLUGIN_ROOT}/hooks/ensure_dependencies.py",
            "timeout": 60
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python ${CLAUDE_PLUGIN_ROOT}/hooks/spawn_plan_viewer.py",
            "timeout": 15
          }
        ]
      }
    ]
  }
}
