{
  "description": "Auto-spawn plan viewer for plan files",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/spawn-plan-viewer.sh",
            "timeout": 15
          }
        ]
      }
    ]
  }
}
